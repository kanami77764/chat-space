.message-list__id
  .message-list__id__info
    .message-list__id__info__name
      = message.user.name
    .message-list__id__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-list__lower
    - if message.body.present?
      .message-list__lower__contents
        = message.body
    = image_tag message.image.url, class: 'message-list__lower__image' if message.image.present?